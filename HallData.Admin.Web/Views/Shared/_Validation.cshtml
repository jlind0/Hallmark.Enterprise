<script type="text/ng-template" id="validation">
	<ng-message when="required" class="parsley-errors-list filled parsley-required">This field is required</ng-message>
	<ng-message when="minlength" class="parsley-errors-list filled parsley-required">This field is too short</ng-message>
	<ng-message when="maxlength" class="parsley-errors-list filled parsley-required">This field is too long</ng-message>
	<ng-message when="url" class="parsley-errors-list filled parsley-required">Enter a valid url ex. http://www.halldata.com</ng-message>
	<ng-message when="email" class="parsley-errors-list filled parsley-required">Enter a valid email address ex. my_email@domain.com</ng-message>
</script>
