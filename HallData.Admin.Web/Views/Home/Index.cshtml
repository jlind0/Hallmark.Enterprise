@{
	ViewBag.Title = "Dashboard";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
	<link href="~/Content/plugins/DataTables/css/data-table.css" rel="stylesheet"/>
	<link href="~/Content/css/pages/DisplayList.css" rel="stylesheet"/>
}

@section scripts{
<script type="text/javascript" src="~/Scripts/app/services/interface/classes/InterfaceService.js"></script>
<script type="text/javascript" src="~/Scripts/app/interface/models/InterfaceGridModel.js"></script>
<script type="text/javascript" src="~/Scripts/app/interface/controllers/InterfaceGridController.js"></script>
<script type="text/javascript" src="~/Scripts/app/interface/initializers/InterfaceGrid.js"></script>

<script type="text/javascript" src="~/Scripts/app/services/dataview/classes/DataViewService.js"></script>
<script type="text/javascript" src="~/Scripts/app/dataview/models/DataViewGridModel.js"></script>
<script type="text/javascript" src="~/Scripts/app/dataview/controllers/DataViewGridController.js"></script>
<script type="text/javascript" src="~/Scripts/app/dataview/initializers/DataViewGrid.js"></script>

<script type="text/javascript" src="~/Scripts/app/services/applicationview/classes/ApplicationViewService.js"></script>
<script type="text/javascript" src="~/Scripts/app/applicationview/models/ApplicationViewGridModel.js"></script>
<script type="text/javascript" src="~/Scripts/app/applicationview/controllers/ApplicationViewGridController.js"></script>
<script type="text/javascript" src="~/Scripts/app/applicationview/initializers/ApplicationViewGrid.js"></script>
}

@Html.Partial("_ActiveMenuItem", "Home")

<div id="content" class="content">
	<div class="row m-b-10">
		<div class="col-sm-8">
			<h1 class="page-header">
				<i class="fa fa-fw fa-dashboard"></i>
				@ViewBag.Title
			</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="panel panel-inverse panel-loading">
				<div class="panel-heading">
					<span class="panel-title">Interfaces Directory</span>
					<div class="pull-right">
						<div class="btn-group m-r-5">
							<a href="@Html.Raw(Url.RouteUrl("interfaceAdd"))" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i><span class="hidden-md m-l-5">Interface</span></a>
						</div>
						@Html.Partial("~/Views/Shared/_PanelControls.cshtml")
					</div>
				</div>
				<div class="panel-body p-0">
					<div class="col-sm-12" id="interfacesgrid" ng-controller="interfaceGridController">
						<div data-bind="with: interfaceGrid">
							<div data-bind="template:gridTemplate"></div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="panel panel-inverse panel-loading">
				<div class="panel-heading">
					<span class="panel-title">Data Views Directory</span>
					<div class="pull-right">
						<div class="btn-group m-r-5">
							<a href="@Html.Raw(Url.RouteUrl("dataViewAdd"))" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i><span class="hidden-md m-l-5">Data View</span></a>
						</div>
						@Html.Partial("~/Views/Shared/_PanelControls.cshtml")
					</div>
				</div>
				<div class="panel-body p-0">
					<div class="col-sm-12" id="dataviewssgrid" ng-controller="dataViewGridController">
						<div data-bind="with: dataViewGrid">
							<div data-bind="template:gridTemplate"></div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="panel panel-inverse panel-loading">
				<div class="panel-heading">
					<span class="panel-title">Application Views Directory</span>
					<div class="pull-right">
						<div class="btn-group m-r-5">
							<a href="@Html.Raw(Url.RouteUrl("applicationViewAdd"))" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i><span class="hidden-md m-l-5">Application View</span></a>
						</div>
						@Html.Partial("~/Views/Shared/_PanelControls.cshtml")
					</div>
				</div>
				<div class="panel-body p-0">
					<div class="col-sm-12" id="applicationviewssgrid" ng-controller="applicationViewGridController">
						<div data-bind="with: applicationViewGrid">
							<div data-bind="template:gridTemplate"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>