@{
	ViewBag.Title = "Data View Column Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
	<link href="~/Content/plugins/DataTables/css/data-table.css" rel="stylesheet"/>
	<link href="~/Content/css/pages/DisplayList.css" rel="stylesheet"/>
}

@section scripts{
	<script type="text/javascript" src="~/Scripts/app/services/party/classes/PartyService.js"></script>
	<script type="text/javascript" src="~/Scripts/app/services/person/classes/PersonService.js"></script>
	<script type="text/javascript" src="~/Scripts/app/services/user/classes/UserService.js"></script>

	<script type="text/javascript" src="~/Scripts/app/shared/models/DeliveryMethodTypeFilter.js"></script>
	<script type="text/javascript" src="~/Scripts/app/shared/models/FrequencyTypeFilter.js"></script>
	<script type="text/javascript" src="~/Scripts/app/shared/models/TierTypeFilter.js"></script>
	<script type="text/javascript" src="~/Scripts/app/shared/models/StatusTypeFilter.js"></script>
	<script type="text/javascript" src="~/Scripts/app/shared/models/PartyTypeFilter.js"></script>

	<script type="text/javascript" src="~/Scripts/app/admin/user/models/UserGridModel.js"></script>
	<script type="text/javascript" src="~/Scripts/app/admin/user/controllers/UserGridController.js"></script>
	<script type="text/javascript" src="~/Scripts/app/admin/user/initializers/UserGrid.js"></script>
}

@Html.Partial("_ActiveMenuItem", "DataViews")

<div id="content" class="content">
	<div class="row m-b-10">
		<div class="col-sm-8">
			<h1 class="page-header">
				<i class="ion-grid m-r-5"></i>
				@ViewBag.Title
			</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="unsortable">
				<div class="panel panel-inverse panel-loading">
					<div class="panel-heading">
						<span class="panel-title">General Information</span>
						<div class="pull-right">
							<div class="btn-group m-r-5">
								<a href="#" class="btn btn-primary btn-xs"><i class="fa fa-plus m-r-5"></i>Data View</a>
							</div>
							@Html.Partial("~/Views/Shared/_PanelControls.cshtml")
						</div>
					</div>
					<div class="panel-body p-0">
						<div class="col-sm-12" ng-controller="dataViewDisplayController">
							<div class="panel-body">
								<div class="panel-loader" ng-if="displayDataView == null"><span class="spinner-small"></span></div>
								<div class="form-horizontal">
									<div class="form-group m-b-0">
										<label class="col-sm-3 control-label f-w-700">Name</label>
										<div class="col-sm-9">
											<p class="form-control-static" ng-bind="displayDataView.Name" ng-show="displayDataView.Name"></p>
											<p class="form-control-static" ng-show="displayDataView.Name == null || displayDataView.Name == ''">
												<em class="text-muted">(undefined)</em>
											</p>
										</div>
									</div>
									<div class="form-group m-b-0">
										<label class="col-sm-3 control-label f-w-700">Display Name</label>
										<div class="col-sm-9">
											<p class="form-control-static" ng-bind="displayDataView.DisplayName" ng-show="displayDataView.DisplayName"></p>
											<p class="form-control-static" ng-show="displayDataView.DisplayName == null || displayDataView.DisplayName == ''">
												<em class="text-muted">(undefined)</em>
											</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<div class="unsortable">
				<div class="panel panel-inverse panel-loading">
					<div class="panel-heading">
						<span class="panel-title">Data View Results</span>
						<div class="pull-right">
							<div class="btn-group m-r-5">
								<a href="@Html.Raw(Url.RouteUrl("AttributeAdd"))" class="btn btn-primary btn-xs"><i class="fa fa-plus m-r-5"></i>Add</a>
							</div>
							@Html.Partial("~/Views/Shared/_PanelControls.cshtml")
						</div>
					</div>
					<div class="panel-body">
						
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="unsortable">
				<div class="panel panel-inverse panel-loading">
					<div class="panel-heading">
						<span class="panel-title">Data View Columns</span>
						<div class="pull-right">
							<div class="btn-group m-r-5">
								<a href="#" class="btn btn-primary btn-xs"><i class="fa fa-plus m-r-5"></i>Add</a>
							</div>
							@Html.Partial("~/Views/Shared/_PanelControls.cshtml")
						</div>
					</div>
					<div class="panel-body">

					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<!-- Buttons -->
		<div class="col-md-12">
			<div class="row">
				<div class="col-lg-12">
					<div class="pull-left">
						<a href="@Html.Raw(Url.RouteUrl("DataViewDetailsDisplay"))" class="btn btn-default btn-sm"><i class="fa fa-arrow-left m-r-5"></i> Data View Details</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>